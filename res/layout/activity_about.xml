<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoMainList"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="60dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".About" >

    <RelativeLayout
        android:id="@+id/lyAboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android Full Time Recorder"
            android:textColor="@color/textoMapa"
            android:textColorHint="@color/text04"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="24dp"
            android:text="Impartido por el profesor\nJesús Tomás Gironés"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="16dp"
            android:text="Fuentes descargables desde\nwww.androidcurso.com y GitHub"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tLabelDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="eliasdefrancisco@gmail.com"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tLabelDuration"
            android:layout_below="@+id/tLabelDuration"
            android:text="www.ARCADEXXI.com"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="20dp"
            android:text="Autor: Elias de Francisco Javaloyes"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="16dp"
            android:text="Musica de ZOE.LEELA - Pop up\nwww.jamendo.com"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="22dp"
            android:text="Jerez, 15 de Noviembre de 2013"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="25dp"
            android:text="Proyecto fin del curso de Programación de Dispositivos Android de la UPV"
            android:textColor="@color/text04"
            android:textColorHint="@color/text04"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>